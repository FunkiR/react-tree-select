{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"lib": [
			"es5",
			"es6",
			"dom",
			"esnext"
		],
		"baseUrl": "src",
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "./dist/",
		"esModuleInterop": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"paths": {
			"~/*": ["./*"]
		},
		"plugins": [
			{
				"exclude": [ "**/node_modules/**" ],
				"transform": "typescript-transform-paths",
				"afterDeclarations": true
			},
		],
		"strictNullChecks": true,
		"target": "es6",
		"jsx": "react",
		"allowJs": true,
		"removeComments": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
